# Alias
alias ls='ls --ignore=lost+found --color=auto -h -v --indicator-style=classify'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -al'
alias bd=". bd -si"
alias kfg="kill -- -\$(jobs -p); fg"
alias ps='ps xawf -eo pid,user,args'
alias rm='rm -I --preserve-root'
alias work='cd /dev/shm/@= user.name =@/workspace'
function cdmk() {
    mkdir -p "$@"
    cd $1
}
function htop() {
    local htoprc=$XDG_CONFIG_HOME/htop/htoprc.low
    if [[ $(tput lines) -gt 50 ]]; then
        htoprc=$XDG_CONFIG_HOME/htop/htoprc.high
    fi
    env TERM=screen HTOPRC=$htoprc htop "$@"
}
